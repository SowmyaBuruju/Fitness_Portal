<h1>{{title}}</h1>
<br>
<form method="POST" id="login-form" action="/login">
    <label>User Name:
        <input type="text" name="email" id="email" placeholder="Enter user name" value="{{userInfo.username}}">
    </label><br><br>
    <label>Password:
        <input type="password" name="password" id="password" placeholder="Enter password" value="{{userInfo.password}}">
    </label><br><br>
    <button type="submit">  Submit  </button>
</form>
<br>
<a href="/signup">Need to register? Click here to sign-up</a>

{{#if hasErrors}}
  <ul class="error-list">
    {{#each errors}}
    <li>
      {{this}}
    </li>
    {{/each}}
  </ul>
{{/if}}