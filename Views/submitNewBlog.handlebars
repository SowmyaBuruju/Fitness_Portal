<div class = "newBlogContainer" >
<form action="/newBlog" enctype="multipart/form-data" method="POST">
    
          <label for="title" class="form-label">Title</label> 
          <input type="text" name="title" id="title" class="form-control"> <br/>
        

          <label for="body" class="form-label">Description</label>
          <textarea name="body" id="body" class="form-control" cols="30" rows="4" style="height:200px"></textarea> <br/>


          <label for = "date" class = "form-label"> Date:</label>
          <input type="date" id = "date" name="date"> <br/>
    

          <label for="image"> Image:
          <input type="file" class="form-control" name="image" accept="image/*"> <br/>
          </label>

        
          <input type="submit" class="btn btn-primary">
        </div>

      </div>
    
    </form>
</div>